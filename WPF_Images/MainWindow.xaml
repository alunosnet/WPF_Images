<Window x:Class="WPF_Images.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Images"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Click="btAdicionar_Click" x:Name="btAdicionar" Width="200" Height="70" Content="Adicionar" VerticalAlignment="Top"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Margin="0 70 0 0 ">
            <StackPanel x:Name="SPImagens" VerticalAlignment="Top" Margin="0 0 0 0">
            </StackPanel>
        </ScrollViewer>
            
    </Grid>
</Window>
